<!-- SEO & Social Tags -->
<section id="seo-section" class="hidden mt-10 max-w-3xl mx-auto space-y-6">
  <strong class="text-gray-900 text-sm uppercase tracking-wide">
    SEO & Social Metadata
  </strong>

  <!-- Loading State -->
  <div
    id="seo-loading"
    class="hidden rounded-lg border border-gray-200 mt-2 bg-white shadow-sm p-8 text-center"
  >
    <div class="inline-block w-6 h-6 border-2 border-gray-300 border-t-blue-500 rounded-full animate-spin"></div>
    <p class="text-sm text-gray-500 mt-2">Loading metadata...</p>
  </div>

  <!-- Error State -->
  <div
    id="seo-error"
    class="hidden rounded-lg border border-red-200 mt-2 bg-red-50 shadow-sm p-5 text-center"
  >
    <p class="text-sm text-red-600">Could not load metadata for this URL</p>
  </div>

  <div
    class="rounded-lg border border-gray-200 mt-2 bg-white shadow-sm p-5 flex flex-col gap-4 md:flex-row md:items-start hover:shadow-md"
    id="seo-preview-card"
  >
    <!-- Image -->
    <div class="md:w-1/3 w-full">
      <img
        id="seo-preview-image"
        src=""
        alt="Preview image"
        class="rounded-md w-full border border-gray-200 shadow-sm hidden"
      />
    </div>

    <!-- Info -->
    <div class="flex-1 flex flex-col gap-2">
      <span id="seo-preview-url" class="text-xs text-blue-600 break-all"></span>
      <h3 id="seo-preview-title" class="text-lg font-bold text-gray-900"></h3>
      <p id="seo-preview-description" class="text-sm text-gray-700"></p>

      <div
        id="seo-preview-tags"
        class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm text-gray-800 mt-2"
      >
      </div>
    </div>
  </div>
</section>
